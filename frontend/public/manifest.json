{
  "name": "Brevity",
  "description": "Brevity app",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup",
    "default_icon": {
      "48": "/BrevityIcon-48.png",
      "128": "/BrevityIcon-128.png"
    }
  },
  "permissions": [
    "storage",
    "webRequest",
    "webNavigation",
    "alarm"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://noahsmiths.github.io/*"],
      "js": ["gmail-oauth.js"]
    }
  ],
  "icons": {}
}